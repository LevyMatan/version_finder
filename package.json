{
  "name": "version_finder",
  "version": "1.0.1",
  "description": "App to assist developer find the first version including a specific commit in a Git Repository with multiply submodules.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development nodemon --exec electron .",
    "docs": "jsdoc -r .",
    "build-mac": "electron-packager . VersionFinder --platform=darwin --arch=x64 --overwrite --icon=icon-jinny.icns --out=release-builds --prune=true --asar",
    "build-linux": "electron-packager . VersionFinder --platform=linux --arch=x64 --overwrite --icon=icon-jinny.png --out=release-builds --prune=true --asar",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Matan Levy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-packager": "^17.1.2",
    "jsdoc": "^4.0.3",
    "nodemon": "^3.1.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "bootstrap": "^5.3.3",
    "simple-git": "^3.24.0"
  }
}
