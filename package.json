{
  "name": "version_finder",
  "version": "0.0.0-development",
  "description": "App to assist developer find the first version including a specific commit in a Git Repository with multiply submodules.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development nodemon --exec electron .",
    "docs": "jsdoc -r .",
    "build-mac": "electron-packager . VersionFinder --platform=darwin --arch=x64 --overwrite --icon=./assets/icons/icon-jinny.icns --out=release-builds --prune=true --asar",
    "build-linux": "electron-packager . VersionFinder --platform=linux --arch=x64 --overwrite --icon=./assets/icons/ic_launcher.png --out=release-builds --prune=true --asar",
    "test": "echo \"Error: no test specified\" && exit 1",
    "semantic-release": "semantic-release"
  },
  "build": {
    "appId": "com.matanlevy.version_finder",
    "productName": "Version Finder",
    "mac": {
      "icon": "/Users/matanlevy/GitHub/version_finder/assets/icons/icon-jinny.icns"
    }
  },
  "author": "Matan Levy",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "electron": "^30.0.9",
    "electron-packager": "^17.1.2",
    "globals": "^15.6.0",
    "jsdoc": "^4.0.3",
    "nodemon": "^3.1.3",
    "semantic-release": "^24.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "bootstrap": "^5.3.3",
    "simple-git": "^3.24.0",
    "winston": "^3.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LevyMatan/version_finder.git"
  }
}
